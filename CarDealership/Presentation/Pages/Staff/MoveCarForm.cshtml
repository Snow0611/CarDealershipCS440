@{
    ViewData["Title"] = "Move Form";
    Layout = null;
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using CarDealership.DataAccess

@model IEnumerable<Car>

<h2>Enter lot to move car to</h2>

<table>
    <tr>
        <th>Plate Number</th>
        <th>Lot Number</th>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
        <th>Price</th>
        <th>Color</th>
        <th>Condition</th>
    </tr>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.PlateNumber</td>
                <td>@car.LotID</td>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.ModelYear</td>
                <td>@car.Price</td>
                <td>@car.Color</td>
                <td>@car.CarStatus</td>
            </tr>
        }
    </tbody>
</table>

<form action="/BusinessLogicLayer/MoveCar" method="get">
    <br />
    <label for="plateNum">Please confirm the plate number:</label>
    <input type="text" id="plateNum" name="plateNum" />
    <input type="hidden" name="make" value="null" />
    <input type="hidden" name="model" value="null" />
    <input type="hidden" name="modelYear" value="0" />
    <input type="hidden" name="price" value="0" />
    <input type="hidden" name="color" value="null" />
    <input type="hidden" name="carStatus" value="null" />
    <input type="hidden" name="salesmanID" value="-1" />
    <br />
    <label for="lotID">Lot:</label>
    <input type="text" id="lotID" name="lotID" value="0" />
    <br />
    <input type="submit" value="Submit">
</form>